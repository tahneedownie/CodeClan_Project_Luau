<h2> Edit <%= @guest.format_name %> </h2>

<form method="POST" action="/guests/<%= @guest.id %>">


    <div>
      <label for="title"> Title: </label>
      <input type="text" name="title" id="title" value="<%= @guest.title %>"/>
    </div>

    <div>
      <label for="first_name"> First Name: </label>
      <input type="text" name="first_name" id="first_name" value="<%= @guest.first_name %>"/>
    </div>

    <div>
      <label for="surname"> Surname: </label>
      <input type="text" name="surname" id="surname" value="<%= @guest.surname %>"/>
    </div>

    <div>
      <label for="address"> Address: </label>
      <input type="text" name="address" id="address" value="<%= @guest.address %>"/>
    </div>

    <div>
      <label for="address"> City: </label>
      <input type="text" name="city" id="city" value="<%= @guest.city %>"/>
    </div>

    <div>
      <label for="country"> Country: </label>
      <input type="text" name="country" id="country" value="<%= @guest.country %>"/>
    </div>

    <div>
      <label for="postcode"> Postcode: </label>
      <input type="text" name="postcode" id="postcode" value="<%= @guest.postcode %>"/>
    </div>

    <div>
      <label for="email"> Email: </label>
      <input type="text" name="email" id="email" value="<%= @guest.email %>"/>
    </div>

    <div>
      <label for="room_select"> Select Room: </label>
      <select name="room_id" id="room_select" selected="<%= @guest.room_id  %>">
        <% @rooms.each do |room| %>
        <% if room.id == @guest.room_id %>
        <option value= <%= room.id %> selected> <%= room.room_name.capitalize %> </option>
        <% else %>
        <option value= <%= room.id %> > <%= room.room_name.capitalize %> </option>
        <% end %>
        <% end %>
      </select>
    </div>

    <div>
      <input type="submit" value="Save details"/>
    </div>


</form>
