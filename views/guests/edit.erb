<div class="h2_over_ride">
<h2> Guests Details  </h2>
</div>

<form method="POST" action="/guests/<%= @guest.id %>">
  <div class="form_block">

    <div>
      <label for="title"> Title: </label>
      <input class="form_input_title" type="text" name="title" id="title" value="<%= @guest.title %>"/>
    </div>

    <div>
      <label for="first_name"> First Name: </label>
      <input class="form_input_name" type="text" required name="first_name" id="first_name" value="<%= @guest.first_name %>"/>
    </div>

    <div>
      <label for="surname"> Surname: </label>
      <input class="form_input_name" type="text" required name="surname" id="surname" value="<%= @guest.surname %>"/>
    </div>

    <div>
      <label for="address"> Address: </label>
      <input class="form_input_address" type="text" name="address" id="address" value="<%= @guest.address %>"/>
    </div>

    <div>
      <label for="city"> City: </label>
      <input class="form_input_address" type="text" name="city" id="city" value="<%= @guest.city %>"/>
    </div>

    <div>
      <label for="country"> Country: </label>
      <input class="form_input_name" type="text" name="country" id="country" value="<%= @guest.country %>"/>
    </div>

    <div>
      <label for="postcode"> Postcode: </label>
      <input class="form_input_title" type="text" name="postcode" id="postcode" value="<%= @guest.postcode %>"/>
    </div>

    <div>
      <label for="email"> Email: </label>
      <input class="form_input_email" type="text" name="email" id="email" value="<%= @guest.email %>"/>
    </div>

    <div>
      <label class="room_selector_label" for="room_select"> Select Room: </label>
      <select class="room_selection_field" name="room_id" id="room_select" selected="<%= @guest.room_id  %>">
        <% @rooms.each do |room| %>
          <% if room.id == @guest.room_id %>
            <option value= <%= room.id %> selected> <%= room.room_name.capitalize %> </option>
          <% else %>
            <option value= <%= room.id %> > <%= room.room_name.capitalize %> </option>
          <% end %>
        <% end %>
      </select>
    </div>

    <div>
      <input class="save_button" type="submit" value="Save"/>
    </div>
  </div>

</form>
